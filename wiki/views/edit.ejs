<!DOCTYPE html>
<html lang="en">
<%- include("partials/head.ejs", { title: title }) %>

  <body>
    <div class="row">
      <%- include("partials/sidebar.ejs", { nav: nav}) %>
        <div class="main col-lg-10 col-md-9">
          <form action="/wiki/<%= title %>?_method=PUT" method="POST">
            <label for="entryContent">Entry Content</label>
            <section>
              <textarea name="editedContent" id="editedContent" required><%= content %></textarea>
            </section>
            <button>Submit</button>
          </form>
        </div>
    </div>
  </body>

</html>